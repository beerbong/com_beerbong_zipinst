<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/onandroid_dialog_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/onandroid_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/onandroid_text" />

    <TextView
        android:id="@+id/onandroid_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/onandroid_link" />

    <Spinner
        android:id="@+id/onandroid_manufacturer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/onandroid_device"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</LinearLayout>